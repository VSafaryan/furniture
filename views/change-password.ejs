<%- include('layouts/header') %>


<!-- Register-box START -->
<div class="section-block-grey border-top">
    <div class="container">
        <div class="section-heading">
            <h5><%= __('links.changePassword') %></h5>
            <div class="section-heading-line-left"></div>
        </div>
        <div class="row mt-40">

            <div class="col-lg-8 col-md-7 col-12 mb-30">
                <div class="login-box client-login-box">
                    <h4><%= __('links.changePassword') %></h4>
                    <div class="register-box-input mt-15">
                        <form action="/change-password/change-password" method="post" class="">
                                <input type="hidden" name="_id" value='<%= oneUser._id %>'>
                            <input type="password" name="password" placeholder="<%= __('links.changePlacholder') %>  *" required="">
                            <input type="password" name="confirmPassword" placeholder="<%= __('links.changePlacholderRepeat') %> *" required="">
                            <button type="submit" class="register-button">Send</button>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-5 col-12">
                <div class="register-box-menu">
                    <ul>
                        <li><a href="/login"> <%= __('info.login') %> </a></li>
                        <li><a href="/register"> <%= __('info.register') %> </a></li>
                        <li class="register-box-menu-active"><a href="/change-password"> <%= __('info.forgot') %> </a></li>
                        <li><a href="/personal"> <%= __('info.myInfo') %> </a></li>
                        <li><a href="/orders"> <%= __('info.orders') %> </a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Register-box End -->

<%- include('layouts/footer') %>